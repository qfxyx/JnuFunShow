<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE0"
    android:orientation="vertical">
    <liangbin.funshow.manage.ActivityTilte
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </liangbin.funshow.manage.ActivityTilte>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:textColor="#000000"
                android:gravity="center"
                android:text="人事编号"
                android:textSize="20sp"
                android:layout_height="match_parent"
                android:layout_width="100dp"/>
            <EditText
                android:textColor="#000000"
                android:id="@+id/net_number"
                android:hint="学生请输入学号"
                android:textCursorDrawable="@null"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textColor="#000000"
                android:gravity="center"
                android:text="用户姓名"
                android:textSize="20sp"
                android:layout_height="match_parent"
                android:layout_width="100dp"/>
            <EditText
                android:textColor="#000000"
                android:id="@+id/net_name"
                android:hint="你的姓名"
                android:textCursorDrawable="@null"/>

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp">
        <CheckBox
            android:layout_marginStart="15dp"
            android:textColor="#0000CD"
            android:layout_marginLeft="90dp"
            android:id="@+id/net_remember_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#0000CD"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住我"/>
    </LinearLayout>

    <Button
        android:background="@drawable/log_in_shape"
        android:layout_marginTop="10dp"
        android:id="@+id/net_query_button"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:text="提交"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温馨提示："
        android:textSize="25sp"
        android:textColor="#0000CD"
        android:layout_marginTop="20dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:textColor="#000000"
            android:id="@+id/net_result_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"/>

    </ScrollView>


</LinearLayout>
