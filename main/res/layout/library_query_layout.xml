<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="liangbin.funshow.activity.LibraryQueryActivity">

    <liangbin.funshow.manage.ActivityTilte
        android:id="@+id/lib_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </liangbin.funshow.manage.ActivityTilte>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="#FFE1FF"
        android:orientation="vertical"
        android:id="@+id/lib_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/lib_account"
            android:hint="请输入你的你的六位校园卡号"/>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/lib_name"
            android:hint="请输入你的姓名"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:id="@+id/lib_remember_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="3dp"
            android:textColor="#00F"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="记住我"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:id="@+id/lib_query_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/log_in_shape"
        android:text="书本续借和到期状态查询"/>
    <Button
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/lib_history_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/log_in_shape"
        android:text="书本借阅历史"/>
    <Button
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/lib_book_search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/log_in_shape"
        android:text="找书"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/lib_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>


</LinearLayout>
